<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_ll_floating_view"
        android:layout_width="@dimen/size_48_dp"
        android:layout_height="@dimen/size_48_dp"
        android:layout_centerInParent="true"
        android:background="@drawable/floating_view_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/size_8_dp"
            android:src="@drawable/icon_videoa"/>

        <TextView
            android:id="@+id/id_show_shot_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_10_sp"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>